---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Professional | Berken Tekin">
    <div class="max-w-5xl mx-auto">
        <div class="mb-8 text-center">
            <a
                href="/cv.pdf"
                download
                class="inline-block border-2 border-black px-8 py-3 font-bold uppercase tracking-widest hover:bg-black hover:text-white transition duration-300"
            >
                Download CV
            </a>
        </div>
        <div class="aspect-[1/1.4] w-full border border-gray-200 shadow-lg">
            <iframe src="/cv.pdf" class="w-full h-full"></iframe>
        </div>
    </div>
</Layout>
